<div class="card card-body">
  <h3 class="card-title">Edit Video idea</h3>
  <form action="/ideas/update/{{idea.id}}?_method=PUT" method="POST">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control {{#if errors.title}} is-invalid {{/if}}" id="title" name="title" value="{{idea.title}}">

      {{!-- Validation message --}}
      {{#if errors.title}}
      <div class="invalid-feedback">
        {{errors.title}}
      </div>
      {{/if}}
    </div>

    <div class="form-group">
      <label for="details">Details</label>
      <textarea type="text" class="form-control {{#if errors.details}} is-invalid {{/if}}" id="details" name="details">{{idea.details}}</textarea>

      {{!-- Validation message --}}
      {{#if errors.details}}
      <div class="invalid-feedback">
        {{errors.details}}
      </div>
      {{/if}}
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
  </form>
</div>